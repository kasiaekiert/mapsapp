<div class="container">
  <h1> <%= t('.indexplace') %> </h1>
  <div class="row">
    <% @places.each do |place| %>
      <div class="col-md-4">
        <h2><%= place.name %></h2>
        <p><%= place.address %></p>
        <p><%= link_to t('links.show'), place_path(place), class: "btn btn-secondary btn-xs" %></p>
        <% if can? :delete, place %>
          <p><%= link_to t('links.destroy'), place_path(place), method: :delete, data: { confirm: 'Are you sure?' } %></p>
        <% end %>
         <% if can? :manage, place %>
          <p><%= link_to t('links.edit'), edit_place_path(place) %></p>
        <% end %>
      </div>
    <% end %>
    <br>
    <%= link_to t('.newplace'), new_place_path, class: "btn btn-secondary btn-lg btn-block" %>
  </div>
</div>  <%#container%>

