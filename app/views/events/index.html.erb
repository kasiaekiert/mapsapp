<div class="container">
  <h1> <%= t('.events') %> </h1>
  <table class= "table table-hover">
    <thead>
      <tr>
        <th> <%= Event.human_attribute_name(:name) %> </th>
        <th><%= Event.human_attribute_name(:duration) %> </th>
        <th><%= Event.human_attribute_name(:started_at) %> </th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @events.each do |event| %>
        <tr>
          <td><%= event.name %></td>
          <td><%= event.duration %></td>
          <td><%= event.started_at %></td>
          <td><%= link_to 'Show', event %></td>
          <td><%= link_to 'Add me to this event', add_me_event_path(event) %></td>
          <td>
            <% if can? :manage, event %>
              <%= link_to "Edit", edit_event_path(event) %>
            <% end %>
          </td>
          <td>
            <% if can? :manage, event %>
              <%= link_to 'Destroy', event, method: :delete, data: { confirm: 'Are you sure?' } %>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New event', new_event_path %>
  <br>
  <%= link_to 'Show me places', places_path %>
</div>