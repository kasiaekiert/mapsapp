<div class="container">
  <h1> <%= t('.events') %> </h1>
  <tbody>
  <table class= "table table-hover">
    <thead>
          <% @events.each do |event| %>
      <tr>
        <th> <%= t('.name_event') %> </th>
        <th><%= t('.duration') %> </th>
        <th><%= t('.start_at') %> </th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @events.each do |event| %>
        <tr>
          <td><%= event.name %></td>
          <td><%= event.duration %></td>
          <td><%= event.started_at %></td>
          <td><%= link_to 'Show', event %></td>
          <td>
          <% if can? :manage, event %>
            <%= link_to "Edit", edit_event_path(event) %>
          <% end %>
          </td>
          <td>
          <% if can? :manage, event %>
            <%= link_to 'Destroy', event, method: :delete, data: { confirm: 'Are you sure?' } %>
          <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New Event', new_event_path %>
  <br>
  <%= link_to 'Show me places', places_path %>
</div>