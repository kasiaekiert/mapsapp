<div class="container">
  <p>
    <strong><%= Event.human_attribute_name(:name) %> </strong>
    <%= @event.name %>
  </p>

  <p>
    <strong><%= Event.human_attribute_name(:started_at) %></strong>
    <%= @event.started_at %>
  </p>

  <p>
    <strong><%= Event.human_attribute_name(:duration) %></strong>
    <%= @event.duration %>
  </p>

  <p>
    <% if @event.has_member?(current_user) %>
      <%= t('.you_are_member') %>
      <%= link_to t('.remove_me_from_event'), event_members_path(@event), method: :delete %>
    <% else %>
      <%= link_to t('.add_me'), event_members_path(@event), method: :post %>
    <% end %>

    <strong> <%= t('.users_of_events')%></strong>
    <ul>
      <% @event.members.each do |user| %>
        <li> <%= user.email %> </li>
      <% end %>
    </ul>
  </p>

  <p>
    <strong><%= Place.model_name.human %></strong>
    <%= @event.place.full_adress %>
  </p>

